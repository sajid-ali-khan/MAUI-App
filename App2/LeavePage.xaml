<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.LeavePage"
             Title="LeavePage">
    <VerticalStackLayout
        Padding="30">
        <VerticalStackLayout
            Margin="0, 0, 0, 10"
            Spacing="10">
            <Label Text="Leave reason/description"
                   FontAttributes="Bold"
                   FontSize="16"></Label>
            <Frame
                CornerRadius="5"
                Padding="4">
                <Editor
                    HeightRequest="80"
                    Placeholder="Start writing the reason for your leave...."/>
            </Frame>
        </VerticalStackLayout>

        <VerticalStackLayout
            Margin="0, 20"
            Spacing="10">
            <Label
                Text="Leave type"
                FontAttributes="Bold"
                FontSize="16"></Label>
            <Frame
                CornerRadius="5"
                Padding="4">
                <Picker
                    Title="Select leave type"
                    ItemsSource="{Binding LeaveTypes}"
                    HorizontalOptions="FillAndExpand"
                />
            </Frame>
        </VerticalStackLayout>

        <VerticalStackLayout
            Margin="0, 10">
            <Label
                Text="Upload an image (optional)"
                FontAttributes="Bold"
                FontSize="16"/>
            <Frame
                CornerRadius="5"
                Margin="0, 16, 0, 0"
                HorizontalOptions="Start"
                Padding="45"
                WidthRequest="140"
                HeightRequest="140"
                HasShadow="True">
                <Image
                    Source="add_image"
                    Aspect="AspectFill"
                ></Image>
            </Frame>
        </VerticalStackLayout>

        <Grid
            ColumnSpacing="10"
            ColumnDefinitions="*, *, *, *, *, *"
            Margin="0, 10">
            <Label
                Grid.Column="0"
                Text="From"
                FontSize="16"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontAttributes="Bold"></Label>
            <Frame
                CornerRadius="3"
                Padding="5, 0"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <DatePicker></DatePicker>
            </Frame>
            <Label
                Grid.Column="3"
                Text="To"
                FontSize="16"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontAttributes="Bold"></Label>
            <Frame
                CornerRadius="3"
                Padding="5, 0"
                Grid.Column="4"
                Grid.ColumnSpan="2">
                <DatePicker></DatePicker>
            </Frame>
        </Grid>

        <Button
            Text="Apply for leave"
            Margin="0, 34"></Button>
        </VerticalStackLayout>
</ContentPage>